@model IEnumerable<GameSimulationN.Models.ViewModel.CityViewModel>

@{
    ViewBag.Title = "Home";
}

<h2>Cities</h2>

<p>
    @Html.ActionLink("Create New City", "Create",null,new {@class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CityId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GoldCoins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CityName) 
              
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoldCoins)
                <img src="~/Content/Coins-icon.png" />
            </td>
           

            <td>
                @{string count = item.Count.ToString();}
                @Html.ActionLink(count + " Buildings", "List", "Building", new { id = item.CityId }, null)

            </td>

            <td>
               
            </td>
        </tr>
    }

</table>
